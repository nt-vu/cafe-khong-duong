
<div class="blog-title">
    <h1>All Blogs</h1>
</div>

<div class="grid wide">
    <div class="blog-content row">
        {{#each posts}}
        <div class="col l-8 l-o-2 m-10 m-o-1 c-10 c-o-1">
            <div class="blog-content__item row">
                <div class="col l-4 m-4 c-5">
                    <div class="blog-content-img">
                        <a href="/posts/{{this.slug}}">
                            <img src="{{this.image}}" alt="">
                        </a>
                    </div>
                </div>

                <div class="col l-8 m-8 c-7">
                    <div class="blog-content__text">
                        <a href="/posts/{{this.slug}}" class="blog-content__title">
                            <h4 >{{this.title}}</h4>
                        </a>
                        <p class="blog-content__description">
                            {{this.description}}
                        </p>
                    </div> 
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <button id="show-more">
        More
    </button>
</div>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<script>
    $(".col.l-8.l-o-2").slice(0,5).show();
    if($(".col.l-8.l-o-2:hidden").length == 0) {
             $("#show-more").hide()
    }
    $("#show-more").on("click", function() {
        $(".col.l-8.l-o-2:hidden").slice(0,5).slideDown();
        if($(".col.l-8.l-o-2:hidden").length == 0) {
             $("#show-more").fadeOut('slow');
        }
    })
</script>

